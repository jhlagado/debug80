{
  "name": "debug80",
  "displayName": "Z80 Debugger",
  "description": "Debug Adapter for Z80 programs (asm80 + HEX/LST)",
  "version": "0.0.1",
  "publisher": "jhlagado",
  "license": "GPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://example.com/your/repo.git"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Debuggers"
  ],
  "activationEvents": [
    "onDebugResolve:z80",
    "onCommand:debug80.terminalInput",
    "onCommand:debug80.openTerminal"
  ],
  "extensionPack": [
    "imanolea.z80-asm"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "z80-lst",
        "aliases": ["Z80 Listing"],
        "extensions": [".lst"],
        "configuration": "./out/null-language.json"
      }
    ],
    "grammars": [
      {
        "language": "z80-lst",
        "scopeName": "source.z80.lst",
        "path": "./syntaxes/z80-lst.tmLanguage.json"
      }
    ],
    "breakpoints": [
      {
        "language": "z80-lst"
      }
    ],
    "commands": [
      {
        "command": "debug80.createProject",
        "title": "Debug80: Create Project (config + launch)"
      },
      {
        "command": "debug80.terminalInput",
        "title": "Debug80: Send Terminal Input"
      },
      {
        "command": "debug80.openTerminal",
        "title": "Debug80: Show Terminal Panel"
      }
    ],
    "debuggers": [
      {
        "type": "z80",
        "label": "Z80 Debug",
        "languages": [],
        "configurationAttributes": {
          "launch": {
            "required": [],
            "properties": {
              "projectConfig": {
                "type": "string",
                "description": "Path to debug80 project config (defaults to ${workspaceFolder}/.vscode/debug80.json)"
              },
              "target": {
                "type": "string",
                "description": "Target name from the project config (defaults to defaultTarget)"
              },
              "asm": {
                "type": "string",
                "description": "Root asm file to assemble with asm80"
              },
              "outputDir": {
                "type": "string",
                "description": "Directory for generated hex/lst artifacts (defaults to asm directory)"
              },
              "artifactBase": {
                "type": "string",
                "description": "Base filename for generated hex/lst (defaults to asm basename)"
              },
              "hex": {
                "type": "string",
                "description": "Path to a Z80 Intel HEX file (optional if asm is provided)"
              },
              "listing": {
                "type": "string",
                "description": "Path to a Z80 .lst listing file for source mapping (optional if asm is provided)"
              },
              "entry": {
                "type": "number",
                "description": "Override entry point (defaults to start of HEX data)"
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Stop on the first instruction",
                "default": true
              },
              "assemble": {
                "type": "boolean",
                "description": "Run asm80 before launch when asm is provided",
                "default": true
              },
              "terminal": {
                "type": "object",
                "description": "Optional terminal device port mapping",
                "properties": {
                  "txPort": {
                    "type": "number",
                    "description": "OUT port for transmit bytes"
                  },
                  "rxPort": {
                    "type": "number",
                    "description": "IN port for receive bytes"
                  },
                  "statusPort": {
                    "type": "number",
                    "description": "IN port for status bits (bit0 RX avail, bit1 TX ready)"
                  },
                  "interrupt": {
                    "type": "boolean",
                    "description": "Future: raise interrupt on RX available",
                    "default": false
                  }
                }
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "z80",
            "request": "launch",
            "name": "Debug Z80 (project config)",
            "projectConfig": "${workspaceFolder}/.vscode/debug80.json",
            "stopOnEntry": true
          }
        ],
        "configurationSnippets": [
          {
            "label": "Z80: Launch (HEX + LST)",
            "description": "Launch and debug a Z80 program from HEX/LST (asm80-generated)",
            "body": {
              "type": "z80",
              "request": "launch",
              "name": "Debug Z80 (project config target)",
              "projectConfig": "^\"\\${workspaceFolder}/.vscode/debug80.json\"",
              "target": "app",
              "stopOnEntry": true
            }
          }
        ]
      }
    ]
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "pretest": "yarn build",
    "test": "node --test out/**/*.test.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "typescript": "5.3.3"
  },
  "dependencies": {
    "@vscode/debugadapter": "^1.64.0",
    "@vscode/debugprotocol": "^1.64.0",
    "asm80": "^1.11.14"
  }
}
